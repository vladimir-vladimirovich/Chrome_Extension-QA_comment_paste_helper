{
	"manifest_version": 2,
	"name": "My Extension",
	"version": "1",
	"description": "Add something to context menu practice",
    "icons": {
      "16": "skull-2.png"
    },
    "background": {
      "scripts": [
        "main.js",
        "scripts/require.js"
      ]
    },
    "content_scripts": [  
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "contentScript.js",
          "scripts/require.js"
        ]
      }
    ],
    "permissions": [
      "contextMenus",
      "clipboardRead",
      "clipboardWrite"
    ]
}