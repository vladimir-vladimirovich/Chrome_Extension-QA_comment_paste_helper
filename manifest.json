{
	"manifest_version": 2,
	"name": "PT QA Assistant",
	"version": "1",
	"description": "PT QA Assistant",
    "icons": {
      "16": "images/skull-2.png"
    },
    "background": {
      "page": "backgroundScripts/background.html"
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "contentScripts/contentScript.js"
        ]
      }
    ],
    "permissions": [
      "contextMenus",
      "storage"
    ],
    "browser_action": {
      "default_popup": "popup/popup.html",
      "default_icon": "images/skull-2.png"
    }
}