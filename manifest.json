{
	"manifest_version": 2,
	"name": "My Extension",
	"version": "1",
	"description": "Add something to context menu practice",
    "icons": {
      "16": "images/skull-2.png"
    },
    "background": {
      "scripts": [
        "lib/require.js",
        "backgroundScripts/main.js"
      ],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "contentScripts/contentScript.js"
        ]
      }
    ],
    "permissions": [
      "contextMenus",
      "clipboardRead",
      "clipboardWrite"
    ]
}